generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(cuid())
  name     String
  username String  @unique
  password String
  isAdmin  Boolean @default(false)
}

model Category {
  id    String @id @default(cuid())
  name  String
  foods Food[]
}

model Food {
  id            String   @id @default(cuid())
  name          String
  numberInStock Int
  price         Int
  categoryId    String
  category      Category @relation(fields: [categoryId], references: [id])
}
